{
  "name": "sound-switcher",
  "version": "1.0.0",
  "description": "Desktop application to switch audio devices on Windows 10/11",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build",
    "build:win": "npm run build && electron-builder --win --config.win.sign=null",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "audio",
    "sound",
    "device-switcher",
    "windows"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.11",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.soundswitcher.app",
    "productName": "Sound Switcher",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "electron/tools",
        "to": "tools"
      },
      {
        "from": "electron/scripts",
        "to": "scripts"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  }
}
